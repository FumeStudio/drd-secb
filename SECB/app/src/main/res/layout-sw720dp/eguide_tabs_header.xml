<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/header_height"
              android:background="@color/sceb_blue"
              android:orientation="horizontal">

    <!--location-->
    <TextView
        android:id="@+id/txtv_location_tab"
        android:layout_width="@dimen/eguide_tab_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/location"
        android:textSize="@dimen/eguide_tab_text_size"
        android:background="@drawable/eguid_tab_active"
        android:textColor="@color/white"/>

    <!--organizer-->
    <TextView
        android:id="@+id/txtv_organizer_tab"
        android:layout_width="@dimen/eguide_tab_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/organizers"
        android:textSize="@dimen/eguide_tab_text_size"
        android:background="@drawable/eguid_tab_deactive"
        android:textColor="@color/white"/>

</LinearLayout>