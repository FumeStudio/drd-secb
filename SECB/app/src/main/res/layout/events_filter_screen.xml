<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"
    android:background="#aa000000">

    <LinearLayout
        android:id="@+id/layout_dark_layer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">
    </LinearLayout>
    <View
        android:id="@+id/shadow"
        android:layout_width="2.3dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/filter_container"
        android:background="@drawable/shadow">
    </View>
    <LinearLayout
        android:id="@+id/filter_container"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:background="@drawable/filter_bg"
        android:orientation="vertical"
        android:padding="@dimen/news_filter_padding">

        <!--city input-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/news_filter_padding"
            android:paddingRight="@dimen/news_filter_padding">
            <!--city title-->
            <TextView
                android:id="@+id/txtv_city_filter_city_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/filter_city"
                android:textColor="@color/secb_dark_text"
                android:gravity="center_vertical"
                android:textSize="@dimen/news_filter_text_size" />

            <!--city value-->
            <EditText
                android:id="@+id/txtv_city_filter_city_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/filter_city"
                android:textColor="@color/secb_grey_text"
                android:gravity="center_vertical"
                android:textSize="@dimen/news_filter_text_size" />

        </TableRow>

        <!--time input-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/news_filter_padding"
            android:paddingRight="@dimen/news_filter_padding">
            <!--from title-->
            <TextView
                android:id="@+id/txtv_news_filter_time_from_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/filter_time_starts"
                android:textColor="@color/secb_dark_text"
                android:gravity="center_vertical"
                android:textSize="@dimen/news_filter_text_size" />

            <!--from value-->
            <EditText
                android:id="@+id/txtv_news_filter_time_from_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/filter_time_from"
                android:textColor="@color/secb_grey_text"
                android:gravity="center_vertical"
                android:textSize="@dimen/news_filter_text_size" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/news_filter_padding"
            android:paddingRight="@dimen/news_filter_padding">

            <!--to-->
            <TextView
                android:id="@+id/txtv_news_filter_time_to_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/filter_time_ends"
                android:textColor="@color/secb_dark_text"
                android:gravity="center_vertical"
                android:textSize="@dimen/news_filter_text_size" />

            <!--to value-->
            <EditText
                android:id="@+id/txtv_news_filter_time_to_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/filter_time_from"
                android:textColor="@color/secb_grey_text"
                android:textSize="@dimen/news_filter_text_size" />
        </TableRow>



        <!--types title-->
        <TextView
            android:id="@+id/txtv_news_filter_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/news_filter_padding"
            android:text="@string/filter_category"
            android:textColor="@color/secb_light_text"
            android:textSize="@dimen/news_filter_btn_text_size"
            android:textStyle="bold" />

        <!--types input-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/news_filter_padding">

            <RadioGroup
                android:id="@+id/radgro_newsTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radbtn_allTypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/news_filter_all_types"
                    android:textColor="@color/secb_grey_text" />

                <RadioButton
                    android:id="@+id/radbtn_economicType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/news_filter_economic_type"
                    android:textColor="@color/secb_grey_text" />

                <RadioButton
                    android:id="@+id/radbtn_politicalType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/news_filter_political_type"
                    android:textColor="@color/secb_grey_text" />
                <!--android:buttonTint="@color/secb_dark_text"-->
                <RadioButton
                    android:id="@+id/radbtn_publicType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/news_filter_public_type"
                    android:textColor="@color/secb_grey_text" />

            </RadioGroup>
        </LinearLayout>

        <!--apply button-->

        <Button
            android:id="@+id/btn_applyFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/news_filter_padding"
            android:background="@color/sceb_orange"
            android:text="@string/filters_apply_filter"
            android:textColor="@color/secb_light_text"
            android:textSize="@dimen/news_filter_btn_text_size" />


    </LinearLayout>
</LinearLayout>