<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/eguide_base_padding"
        android:weightSum="3.5">

        <!--1-->

        <ImageView
            android:id="@+id/imgv_locationImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_weight="1"
            android:src="@drawable/news_img_sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/off_white"
            android:orientation="vertical"
            android:padding="@dimen/organizer_details_margin">

            <include layout="@layout/location_name_info" />

            <TextView
                android:id="@+id/txtv_location_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/organizer_details_margin_small"
                android:textSize="@dimen/event_card_h3_text_size"
                android:textColor="@color/secb_grey_text"
                android:text="adssssssssssssasdad adssssssssssssasdad adssssssssssssasdad adssssssssssssasdad adssssssssssssasdad adssssssssssssasdad adssssssssssssasdad" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/organizer_details_margin_small"
            android:background="@color/off_white"
            android:paddingLeft="@dimen/organizer_details_margin"
            android:paddingRight="@dimen/organizer_details_margin">

            <include
                android:id="@+id/location_capacity_info"
                layout="@layout/location_capacity_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/organizer_details_margin_small"
                android:background="@color/off_white"
                android:visibility="visible"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/organizer_details_margin_small"
            android:background="@color/off_white"
            android:paddingLeft="@dimen/organizer_details_margin"
            android:paddingRight="@dimen/organizer_details_margin">

            <include
                android:id="@+id/location_capacity_info"
                layout="@layout/location_room_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/organizer_details_margin_small"
                android:background="@color/off_white"
                android:visibility="visible"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/organizer_details_margin_small"
            android:layout_weight="1.0"
            android:background="@color/off_white">

            <include
                android:id="@+id/location_personal_info"
                layout="@layout/location_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/organizer_details_margin_small"
                android:layout_weight="1.0"
                android:background="@color/off_white"
                android:visibility="visible"

                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>