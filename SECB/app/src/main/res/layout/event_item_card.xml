            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/event_card_h1_text_size" />

        <TextView
