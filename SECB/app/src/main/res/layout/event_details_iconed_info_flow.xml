<com.wefika.flowlayout.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start|top"
    android:layout_margin="@dimen/event_details_iconed_info_margin">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/imgv_event_timeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/event_card_time_icon"
            android:layout_gravity="center_vertical"
             
            android:layout_marginRight="@dimen/event_details_iconed_info_icon_margin"/>

        <TextView
            android:id="@+id/txtv_event_timeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:30 PM"
            android:layout_gravity="center_vertical"
          
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/event_details_text_size"/>
    </TableRow>

    <View
        android:layout_width="@dimen/event_details_iconed_info_space_width"
        android:layout_height="1dp"
        />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/imgv_event_placeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/event_card_place_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/event_details_iconed_info_icon_margin"
             />

        <TextView
            android:id="@+id/txtv_event_placeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jaddah"
            android:layout_gravity="center_vertical"
           
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/event_details_text_size"/>

    </TableRow>

    <View
        android:layout_width="@dimen/event_details_iconed_info_space_width"
        android:layout_height="1dp"
        />



    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/imgv_event_categoryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/event_card_filter_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/event_details_iconed_info_icon_margin"
             />

        <TextView
            android:id="@+id/txtv_event_categoryValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization"
            android:layout_gravity="center_vertical"
            
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/event_details_text_size"/>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_details_iconed_info__space_height"
        />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/imgv_event_durationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/event_all_day_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/event_details_iconed_info_icon_margin"
             />

        <TextView
            android:id="@+id/txtv_event_durationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Day Event"
            android:layout_gravity="center_vertical"

            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/event_details_text_size"/>
    </TableRow>

    <View
        android:layout_width="@dimen/event_details_iconed_info_space_width"
        android:layout_height="1dp"
        />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/imgv_event_repeatedIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/event_repeated_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/event_details_iconed_info_icon_margin"
             />

        <TextView
            android:id="@+id/txtv_event_repeatedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeated Event"
            android:layout_gravity="center_vertical"
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/event_details_text_size"/>
    </TableRow>

</com.wefika.flowlayout.FlowLayout>