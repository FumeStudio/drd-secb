<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_itemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/menu_item_icon_horizontal_margin"
        android:src="@drawable/home_icon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_itemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/menu_item_icon_horizontal_margin"
        android:layout_toLeftOf="@+id/image_itemIcon"
        android:gravity="right"
        android:padding="@dimen/login_input_text_pad"
        android:singleLine="true"
        android:text="@string/home"
        android:textColor="@color/white"
        android:textSize="@dimen/menu_item_text_size" />
</RelativeLayout>


