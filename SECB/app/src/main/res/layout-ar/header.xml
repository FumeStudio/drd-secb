<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/sceb_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_for_statusbar"
        android:background="@color/sceb_blue"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutContainerHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sceb_blue"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewMenuHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/header_menu_icon_margin_start"
            android:paddingLeft="@dimen/header_menu_icon_margin_start"
            android:paddingRight="@dimen/header_menu_icon_margin_end"
            android:paddingTop="@dimen/header_menu_icon_margin_start"
            android:src="@drawable/menu_button" />

        <TextView
            android:id="@+id/textViewTitleHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageViewMenuHeader"
            android:paddingLeft="@dimen/header_menu_icon_margin_end"
            android:text="@string/home"
            android:textColor="@color/secb_light_text"
            android:textSize="@dimen/header_title_text_size"
            android:textStyle="bold"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/imageViewBackHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/header_menu_icon_margin_start"
            android:paddingRight="@dimen/header_menu_icon_margin_end"
            android:src="@drawable/header_back_btn"
            android:visibility="visible" />

    </RelativeLayout>
</LinearLayout>