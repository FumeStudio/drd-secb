<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/organizer_p_info_rows_margin"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/organizer_p_info_icon_margin"
            android:src="@drawable/home_icon_2" />

        <TextView
            android:id="@+id/address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/home_icon"
            android:gravity="center_vertical"
            android:text="@string/address_"
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />

        <TextView
            android:id="@+id/txtv_organizer_address_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/address_title"
            android:gravity="center_vertical"
            android:text="-"
            android:paddingRight="3dp"
            android:textColor="@color/secb_light_grey_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/organizer_p_info_rows_margin"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/organizer_p_info_icon_margin"
            android:src="@drawable/contactus_icon_2" />

        <TextView
            android:id="@+id/phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/phone_icon"
            android:gravity="center_vertical"
            android:text="@string/phone"
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />

        <TextView
            android:id="@+id/txtv_organizer_phone_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/phone_title"
            android:gravity="center_vertical"
            android:text="-"
            android:paddingRight="3dp"
            android:textColor="@color/secb_light_grey_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/organizer_p_info_rows_margin"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/organizer_p_info_icon_margin"
            android:src="@drawable/email_icon" />

        <TextView
            android:id="@+id/email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/email_icon"
            android:gravity="center_vertical"
            android:text="@string/email_address"
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />

        <TextView
            android:id="@+id/txtv_organizer_email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/email_title"
            android:gravity="center_vertical"
            android:text=""
            android:paddingRight="3dp"
            android:textColor="@color/secb_light_grey_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/organizer_p_info_rows_margin"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/website_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/organizer_p_info_icon_margin"
            android:src="@drawable/website_icon2" />

        <TextView
            android:id="@+id/website_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/website_icon"
            android:gravity="center_vertical"
            android:text="@string/website"
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />

        <TextView
            android:id="@+id/txtv_organizer_website_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/website_title"
            android:gravity="center_vertical"
            android:paddingRight="3dp"
            android:text="-"
            android:textColor="@color/secb_light_grey_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />
    </RelativeLayout>

</LinearLayout>