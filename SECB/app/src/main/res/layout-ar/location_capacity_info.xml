<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/space_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:src="@drawable/location_space_icon" />

        <TextView
            android:id="@+id/txtv_location_spaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/organizer_p_info_icon_margin"
            android:layout_marginRight="@dimen/organizer_p_info_icon_margin"
            android:layout_toLeftOf="@+id/space_icon"

            android:gravity="center_vertical"
            android:text="@string/location_spaceTitle"
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtv_location_spaceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txtv_location_spaceTitle"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"

            android:text="2222"
            android:textColor="@color/secb_grey_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgv_location_capacityIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/location_capacity_icon" />

        <TextView
            android:id="@+id/txtv_location_capacityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/organizer_p_info_icon_margin"
            android:layout_marginRight="@dimen/organizer_p_info_icon_margin"


            android:layout_toLeftOf="@+id/imgv_location_capacityIcon"

            android:text="@string/location_capacityTitle"
            android:textColor="@color/secb_dark_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtv_location_capacityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txtv_location_capacityTitle"
            android:ellipsize="end"
            android:gravity="center_vertical"

            android:maxLines="1"
            android:text="5000"
            android:textColor="@color/secb_grey_text"
            android:textSize="@dimen/organizer_p_info_h1_text_size" />
    </RelativeLayout>

</LinearLayout>