<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_item_card_height"
    android:layout_marginBottom="@dimen/event_card_margin"
    android:layout_marginTop="@dimen/event_card_margin"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/event_card_margin"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="2.5">

        <TextView
            android:id="@+id/txtv_eventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="لقد قامت السعودية بتطوير المؤتمرات المنعقدة ليديها. لقد قامت السعودية بتطوير المؤتمرات المنعقدة ليديها."
            android:textColor="@color/sceb_dark_blue"
            android:textSize="@dimen/event_card_h1_text_size" />

        <TextView
            android:id="@+id/txtv_eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="لقد قامت السعودية بتطوير المؤتمرات المنعقدة ليديها.  لقد قامت السعودية بتطوير المؤتمرات المنعقدة ليديها."
            android:textColor="@color/darkgrey_color"
            android:textSize="@dimen/event_card_h2_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/txtv_event_timeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="2:30 PM"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/darkgrey_color"
                android:textSize="@dimen/event_card_h3_text_size" />

        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/imgv_eventImg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/event_card_margin"
        android:layout_weight="1"
        android:src="@drawable/event_card_img" />

</LinearLayout>